<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.coventry.a260ct.orks.slopemanager.AboutYouFragment"
    android:orientation="vertical">

    <TextView
        android:text="First Name:"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp"
        android:id="@+id/textView13"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="120dp" />

    <TextView
        android:text="Surname:"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/textView14"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="120dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="Name goes here..."
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/textView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText6"
        android:hint="Name goes here..."
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:text="Phone:"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="120dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date of Birth"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="120dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText7"
        android:hint="Name goes here..."
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:text="Email"
        android:layout_height="wrap_content"
        android:id="@+id/nameTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="120dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:hint="Email goes here.."
        android:layout_alignBaseline="@+id/nameTextView"
        android:layout_alignBottom="@+id/nameTextView"
        android:layout_toEndOf="@+id/nameTextView" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_above="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText4" />
</RelativeLayout>
