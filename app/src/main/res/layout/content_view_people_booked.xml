<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.ac.coventry.a260ct.orks.slopemanager.ViewPeopleBooked"
    tools:showIn="@layout/activity_view_people_booked">

    <TextView
        android:id="@+id/dateText"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp"
        android:layout_below="@+id/button_pickdate"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_viewpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="150dp"
        android:layout_below="@+id/dateText"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listview_people"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_viewpeople"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_pickdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick date"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
