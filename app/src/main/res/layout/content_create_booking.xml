<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.ac.coventry.a260ct.orks.slopemanager.booking.CreateBookingActivity"
    tools:showIn="@layout/activity_create_booking">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Date:"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/date_label"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:inputType="date"
        android:labelFor="@+id/date_label"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/date_label"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Date:  "
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/date_label"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:inputType="date"
        android:labelFor="@+id/date_label"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/date_label"/>


</RelativeLayout>
